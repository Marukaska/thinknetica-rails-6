<nav class="navbar navbar-light bg-light">
  <%= link_to 'TestGuru', root_path, class: 'navbar-brand'%>
  <% if current_user.is_a?(Admin) %>
    <div>
      <%= link_to 'AdminPanel', admin_tests_path, class: 'nav-link d-inline' %>
    </div>
  <% end %>
  <span class="navbar-text">
    <% if user_signed_in? %>
      <p class="text-dark">
        <%= t('.welcome', user_first_name: current_user.first_name, user_last_name: current_user.last_name) %> |
        <%= link_to t('.log_out'), destroy_user_session_path, method: :delete %>
      </p>
    <% else %>
    <%= link_to "Log in", new_session_path(resource_name) %> |
    <%= link_to "Sign up", new_registration_path(resource_name) %>
    <% end %>
  </span>
</nav>
