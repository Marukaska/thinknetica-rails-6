<div class="container mt-4">
  <%= form_with model: [:admin, @test], local: true, html: { class: 'form' } do |form| %>
    <%= render 'shared/errors', resource: @test %>

    <div class="form-group mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, id: :test_title, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :level, class: 'form-label' %>
      <%= form.number_field :level, id: :test_level, class: 'form-control' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :category_id, class: 'form-label' %>
      <%= form.collection_select :category_id, Category.all, :id, :title, prompt: 'Select Category', class: 'form-select' %>
    </div>

    <div class="form-group">
      <%= form.label :timer, 'Test Timer (in minutes)' %>
      <%= form.number_field :timer, class: 'form-control', min: 0, step: 1 %>
    </div>


    <p><%= form.submit %></p>

  <% end %>
</div>