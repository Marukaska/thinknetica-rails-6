<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= t('.header') %></h1>
  <%= link_to t(".create"), new_admin_test_path, class: "btn btn-primary" %>
  <%= link_to t(".gists"), admin_gists_path, class: "btn btn-primary" %>
  <%= link_to t(".badges"), admin_badges_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped table-hover">
  <thead class="thead-custom">
  <tr>
    <th scope="col" class="sort-by-title pointer">
      <%= t(".title") %>
      <%= octicon 'arrow-up', class: 'text-succes hide' %>
      <%= octicon 'arrow-down', class: 'text-succes hide' %>
    </th>
    <th scope="col"><%= t(".level") %></th>
    <th scope="col"><%= t(".status") %></th>
    <th scope="col" colspan="3"><%= t(".actions") %></th>
    <th scope="col"><%= t(".questions") %></th>
  </tr>
  </thead>
  <tbody>
  <%= render 'shared/errors', resource: @test %>
  <%= render @tests %>
  </tbody>
</table>