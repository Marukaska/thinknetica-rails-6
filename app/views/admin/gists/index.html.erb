<h1>Gists</h1>

<table class="table">
  <thead>
  <tr>
    <th>Question</th>
    <th>Gist URL</th>
    <th>User</th>
  </tr>
  </thead>
  <tbody>
  <% @gists.each do |gist| %>
    <tr>
      <td><%= link_to gist.question.body.truncate(25), admin_question_path(gist.question) %></td>
      <td><%= link_to gist.url.split('/').last, gist.url, target: "_blank" %></td>
      <td><%= gist.user.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>