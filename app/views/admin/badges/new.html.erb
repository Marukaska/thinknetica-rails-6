<h1><%= t('admin.badges.new.title') %></h1>

<%= form_with model: @badge, url: admin_badges_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, t('admin.badges.form.title') %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image_filename, t('admin.badges.form.image') %>
    <%= form.text_field :image_filename, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rule_type, t('admin.badges.form.rule') %>
    <%= form.select :rule_type, Badge::RULES.map { |key, value| [t("admin.badges.rules.#{value}"), value] }, { prompt: t('admin.badges.form.select_rule') }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rule_value, t('admin.badges.form.rule_value') %>
    <%= form.text_field :rule_value, class: 'form-control' %>
  </div>

  <%= form.submit t('admin.badges.form.create_badge'), class: 'btn btn-primary' %>
<% end %>

<%= link_to t('admin.back'), admin_badges_path, class: 'btn btn-secondary mt-3' %>
