<h1><%= question_header(@test, @question) %></h1>
<%= form_with model: [:admin, @test, @question], local: true do |form| %>
<%= render 'shared/errors', resource: @question %>

<p>
  <%= form.label :body %>
  <%= form.text_field :body %>
</p>

<p><%= form.submit %></p>
<%= link_to 'To Test', admin_test_path(@question.test) %>
<% end %>
