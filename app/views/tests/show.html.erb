<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong><%= @test.questions.present? ? 'Questions:' : 'There is no questions' %></strong>
</p>

<% if @test.questions.present? %>
  <p>
  <table>
    <tr>
      <th>Body</th>
      <th colspan="3">Actions</th>
    </tr>

    <%= render @test.questions %>
  </table>
  </p>
<% end %>

<%= link_to 'All Tests', tests_path %> |
<%= link_to 'Edit', edit_test_path(@test) %> |
<%= link_to 'Add Question', new_test_question_path(@test) %>