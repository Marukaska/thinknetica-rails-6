<h1 class="mb-4"><%= t('.header') %></h1>

<% if @tests.present? %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
      <th scope="col" class="sort-by-title pointer">
        <%= t(".title") %>
        <%= octicon 'arrow-up', class: 'text-succes hide' %>
        <%= octicon 'arrow-down', class: 'text-succes hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.questions') %></th>
      <th><%= t('.actions') %></th>
    </tr>
    </thead>
    <tbody>
    <%= render @tests %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">
    <%= t('.no_tests') %>
  </div>
<% end %>



